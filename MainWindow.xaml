<Window x:Class="MillionaireGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кто хочет стать миллионером" Height="600" Width="800" Background="Black">
    <Canvas>
        <Image Source="pack://application:,,,/Resource/background.jpg" Height="640" Width="800" />
        <Image Source="pack://application:,,,/Resource/logotype.png" Height="310" Width="800" Canvas.Top="15" />

        <Button Name="answer1" Height="50" Width="300" Background="#FF020A4E" BorderBrush="#FF66A7FD" Foreground="White"  FontSize="20" Canvas.Top="420" Canvas.Left="15" Click="Answer_Click" BorderThickness="2"  />
